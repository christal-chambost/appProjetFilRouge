@model IEnumerable<AppProjetFilRouge.Models.RoleViewModelJL>

@{
    ViewData["Title"] = "Gestion des Roles";
}

<h1>Gestion des roles</h1>

<div class="pfr-gestionNavbar d-flex justify-content-center m-5 p-4">
    <a asp-area="" asp-controller="AgentJL" asp-action="Index" class="btn pfr-btn me-5 text-white">Gestion des Comptes Administrateurs</a>
    <a asp-area="" asp-controller="AgentJL" asp-action="Index" class="btn pfr-btn me-5 text-white">Gestion des Comptes Agents</a>
    <a asp-area="" asp-controller="AgentJL" asp-action="Index" class="btn pfr-btn me-5 text-white">Gestion des Comptes Candidats</a>
</div>

<div class="pfr-gestionNavbar d-flex justify-content-lg-end m-5 p-4">
    <a asp-area="" asp-controller="rolesJL" asp-action="Create" class="btn pfr-btn me-5 text-white">Ajout d'un role</a>
</div>

<table class="table">

    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Name)</th>
            <th>@Html.DisplayNameFor(model => model.NormalizedName)</th>
            <th>@Html.DisplayNameFor(model => model.ConcurrencyStamp)</th>
            <th></th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model) 
        {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.NormalizedName)</td>
                    <td>@Html.DisplayFor(modelItem => item.ConcurrencyStamp)</td>
                    <td>
           
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-success text-white"><i class="bi bi-pencil-fill"></i></a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-warning text-white"><i class="bi bi-menu-button-fill"></i></a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger text-white"><i class="bi bi-x-lg"></i></a>

                    </td>
                </tr>
        }
    </tbody>
</table>
