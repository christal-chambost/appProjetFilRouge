@model AppProjetFilRouge.Models.QuizzViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Voulez-vous vraiment le supprimer le Quiz ?</h1>

<hr />

<div class="pfr-gestionNavbar d-flex justify-content-center m-5 p-4">
    
    <dl class="row d-flex justify-content-center">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Technology)
        </dt>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Technology.Name)
        </dd>

        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Level)
        </dt>

        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Level.Name)
        </dd>
    </dl>

<hr />

    <div class="pfr-gestionNavbar d-flex justify-content-center m-5 p-4">

        <form asp-action="Delete">
            <input type="hidden" asp-for="QuizId" />
            <input type="submit" value="Supprimer" class="btn btn-danger mt-3 text-white" />
            <a asp-action="Index" class="btn btn-danger mt-3 text-white">Gestion du Quiz</a>
        </form>

    </div>
</div>
<hr />
