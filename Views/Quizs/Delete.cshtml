@model AppProjetFilRouge.Models.QuizzViewModel

@{
    ViewData["Title"] = "Suppression";
}

<h1>Voulez-vous vraiment supprimer ce quiz ?</h1>

<div class="pfr-gestionNavbar d-flex flex-column justify-content-center m-5 p-4">

    <dl class="row d-flex justify-content-center">
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Name)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>
        <dt class="col-sm-2">Technologie</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Technology.Name)</dd>
        <dt class="col-sm-2">Niveau</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.Level.Name)</dd>
        <dt class="col-sm-2">@Html.DisplayNameFor(model => model.NbQuestions)</dt>
        <dd class="col-sm-10">@Html.DisplayFor(model => model.NbQuestions)</dd>
    </dl>

    <div class="pfr-gestionNavbar d-flex justify-content-center m-5 p-4">

        <form asp-action="Delete">
            <input type="hidden" asp-for="QuizId" />
            <input type="submit" value="Supprimer" class="btn btn-danger mt-3 text-white" />
        </form>

    </div>

    <a asp-action="Index"><i class="bi bi-arrow-left"></i> Retour</a>

</div>
