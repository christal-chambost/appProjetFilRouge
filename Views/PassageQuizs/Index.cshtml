@model PassageQuizViewModel;

<div>


        <h3>Quiz n°@Html.DisplayFor(modelItem => Model.Quizz.QuizId) | @Html.DisplayFor(modelItem => Model.Quizz.Name) 
            (@Html.DisplayFor(modelItem => Model.Quizz.Level.Name))</h3>



        <form asp-action="Index" asp-route-id="@Model.Quizz.QuizId" asp-route-questionId="@Model.Quizz.Questions.First().Questionid">

            <div class="d-flex flex-column justify-content-center">


                    <h5>
                        @Html.DisplayFor(modelItem => Model.Quizz.Questions.First().Name)
                    </h5>
                    <div class="d-flex">
                <h6>@Html.DisplayFor(modelItem => Model.Quizz.Questions.First().QuestionType.Name)</h6>

                        <div class="d-flex flex-column">
                    @for (int i = 0; i <= Model.Quizz.Questions.First().QuestionAnswers.Count; i++)
                    {
                                <div class="form-group">
                            <input type="checkbox" name="@Model.Quizz.Questions.ToList()[0].QuestionAnswers.ToList()[i].QuestionAnswerId">
                            <label for="@Model.Quizz.Questions.ToList()[0].QuestionAnswers.ToList()[i].QuestionAnswerId" class="control-label">@Model.Quizz.Questions.ToList()[0].QuestionAnswers.ToList()[i].Name</label>
                                </div>
                    }
                        </div>

                    </div>

               
            </div>
            <div class="form-group">
                <input type="submit" value="Suivant" class="btn btn-primary" />
            </div>
        </form>
    
</div>