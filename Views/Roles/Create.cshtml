@model AppProjetFilRouge.Models.RoleViewModel

@{
    ViewData["Title"] = "Ajout Role";
}

<h1>Ajout d'un Role</h1>

<hr />

<div class="row d-flex justify-content-center">
    <div class="col-md-4">

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group my-3">
                <label asp-for="Name" class="control-label fw-bold"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <label asp-for="NormalizedName" class="control-label fw-bold"></label>
                <input asp-for="NormalizedName" class="form-control" />
                <span asp-validation-for="NormalizedName" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <label asp-for="ConcurrencyStamp" class="control-label fw-bold"></label>
                <input asp-for="ConcurrencyStamp" class="form-control" />
                <span asp-validation-for="ConcurrencyStamp" class="text-danger"></span>
            </div>

            <hr />

            <div class="form-group my-3">
                <input type="submit" value="Ajouter" class="btn btn-primary mt-3 text-white"/>
                <a asp-action="Index" class="btn btn-primary mt-3 text-white">Gestion des roles</a>
            </div>

        </form>
    </div>
</div>
<hr />

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
