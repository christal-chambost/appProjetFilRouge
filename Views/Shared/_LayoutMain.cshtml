<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AppProjetFilRouge</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/Dashboard/dashboard.css" asp-append-version="true" />
</head>
<body>
	<div class="pfr-main">
		<div class="container-fluid">
			<div class="row flex-nowrap">
				<div class="col-auto col-xl-2 px-sm-0 px-0 pfr-bg pfr-text-light">
					<div class="pfr-navbar-content d-flex flex-column align-items-center align-items-sm-center text-white min-vh-100">
						<div class="pfr-logo"><a asp-area="" asp-controller="Home" asp-action="Index" style="color: #F4F2EA;">HIREFIVE <i class="bi bi-stack"></i></a></div>
						<partial name="_LoginPartial" />
						<ul class="pfr-navbar nav nav-pills flex-column mb-sm-auto mb-0 align-items-center" id="menu">
							<li class="nav-item mt-4">
								<a asp-area="" asp-controller="Home" asp-action="Index" class="d-flex align-items-center p-2 pfr-navlink" style="color: #F4F2EA;">
									<i class="fs-4 bi-speedometer2 ms-3"></i> <span class="ms-1 d-sm-inline">Dashboard</span>
								</a>
							</li>
							<li class="nav-item mt-2">
								<a asp-area="" asp-controller="Candidat" asp-action="Index" class="d-flex align-items-center p-2 pfr-navlink" style="color: #F4F2EA;">
									<i class="fs-4 bi-person-square ms-3"></i> <span class="ms-1 d-sm-inline">Candidats</span>
								</a>
							</li>
							<li class="nav-item mt-2">
								<a asp-area="" asp-controller="Quizs" asp-action="Index" class="d-flex align-items-center p-2 pfr-navlink" style="color: #F4F2EA;">
									<i class="fs-4 bi-card-checklist ms-3"></i> <span class="ms-1 d-sm-inline">Quiz</span>
								</a>
							</li>
							<li class="nav-item mt-2">
								<a asp-area="" asp-controller="Agent" asp-action="Index" class="d-flex align-items-center p-2 pfr-navlink" style="color: #F4F2EA;">
									<i class="fs-4 bi-person-badge ms-3"></i> <span class="ms-1 d-sm-inline">Agents</span>
								</a>
							</li>
						</ul>
						<hr>
						<div class="m-2 sticky-bottom">
							<form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
								<button type="submit" class="pfr-logout nav-link btn btn-link btn-outline-light pfr-text-light d-flex align-items-center"><i class="fs-6 bi-box-arrow-left pe-2"></i> Se déconnecter</button>
							</form>
						</div>
					</div>
				</div>
				<div class="pfr-main-content col py-3 pfr-bg-light-radius">
					<main role="main">
						@RenderBody()
					</main>
				</div>
			</div>
		</div>
	</div>
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
