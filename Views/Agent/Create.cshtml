@model AppProjetFilRouge.Models.AgentViewModel

@{
    ViewData["Title"] = "Ajouter un Agent";
}

<h1>Ajouter un agent</h1>

<hr />

<div class="row d-flex justify-content-center">
    <div class="col-md-4">

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group my-3">
                <label asp-for="UserName" class="control-label fw-bold"></label>
                <input asp-for="UserName" class="form-control" />
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <label asp-for="Email" class="control-label fw-bold"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <label asp-for="PhoneNumber" class="control-label fw-bold"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <label asp-for="FirstName" class="control-label fw-bold"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="form-group my-3">
                <label asp-for="LastName" class="control-label fw-bold"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

             <hr />

            <div class="form-group my-3">
                <input type="submit" value="Ajouter" class="btn btn-primary mt-3 text-white" />
                <a asp-area="" asp-controller="Agent" asp-action="Index" class="btn btn-primary mt-3 text-white">Gestion des agents</a>
            </div>

        </form>
    </div>
</div>
<hr />



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
