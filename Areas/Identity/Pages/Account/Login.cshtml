@page
@model LoginModel

@{
    ViewData["Title"] = "Connexion";
}

<div class="row">
    <div class="col-6 pfr-bg-login d-flex flex-column justify-content-center align-items-md-center">
        <h1>Welcome back!</h1>
        <img src="/img/login-bg.png" alt="" />
    </div>
    <div class="col-6 d-flex justify-content-center align-items-center">
        <section class="m-5">
            <h1>@ViewData["Title"]</h1>
            <form id="account" method="post">
                <h5>Veuillez renseigner vos identifiants pour vous connecter.</h5>
                <hr />
                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Input.Email" class="form-label">E-mail</label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Input.Password" class="form-label">Mot de passe</label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-2 d-flex justify-content-between">
                    <label asp-for="Input.RememberMe" class="form-label">
                        <input class="form-check-input" asp-for="Input.RememberMe" />
                        Se souvenir de moi ?
                    </label>
                    <a id="forgot-password" asp-page="./ForgotPassword">Mot de passe oublié ?</a>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary">Se connecter</button>
                </div>
                <div class="d-flex flex-column align-items-center m-5">
                    <h6>Pas encore de compte ?</h6>
                    <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Créer un compte</a>
                    <a id="resend-confirmation" asp-page="./ResendEmailConfirmation" class="m-3">Renvoyer l'email de confirmation</a>
                </div>
            </form>
        </section>
    </div>
</div>



@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
